<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/bg_action_green"
        android:gravity="center"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tv_title_customerDetails"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:text="مشخصات مشتری"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#ffffff"
            android:textSize="25sp" />

    </LinearLayout>

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearLayout1" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="5dp" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/seprator"
                android:gravity="right"
                android:padding="10dp" >

                <TextView
                    android:id="@+id/txt_customerCompany"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:text="شرکت" />

<TextView
    android:id="@+id/txt_customerslash"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginRight="5dp"
    android:text="/" />

                <TextView
                    android:id="@+id/tv_customerTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="نام و نام خانوادگی :" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/seprator"
                android:gravity="right"
                android:padding="10dp" >

                <TextView
                    android:id="@+id/tv_customeradress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:text="آدرس" />
               
            </LinearLayout>
  <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/seprator"
                android:gravity="right"
                android:padding="10dp" >

                

                <TextView
                    android:id="@+id/tv_haghighicustomer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="حقیقی :" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/seprator"
                android:gravity="right"
                android:padding="10dp" >

                

                <TextView
                    android:id="@+id/tv_telcustomer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="تلفن :" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/seprator"
                android:gravity="right"
                android:padding="10dp" >

                <TextView
                    android:id="@+id/tv_customersemat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:text=""
                    android:textColor="#8b8b8b" />

                <TextView
                    android:id="@+id/lbl_customersemat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="سمت :" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/seprator"
                android:padding="10dp" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="right"
                    android:layout_weight="1"
                    android:gravity="right" >

                    <TextView
                        android:id="@+id/tv_ashkhasmortabet"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:layout_marginRight="5dp"
                        android:text=""
                        android:textColor="#8b8b8b" />

                    <TextView
                        android:id="@+id/lbl_ashkhascustomer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="اشخاص مرتبط :" />
                </LinearLayout>

                
            </LinearLayout>

             

            

       
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/taskFooter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="5dp"
        android:layout_weight="1"
        android:background="@drawable/edittext_back" >

        <ImageView
            android:id="@+id/img_customerdetails_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/close" />

        <ImageView
            android:id="@+id/img_customerdetails_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/delete" />

        <ImageView
            android:id="@+id/img_customerdetails_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/edit" />

        
    </LinearLayout>

</RelativeLayout>