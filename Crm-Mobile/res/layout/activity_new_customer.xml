<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:textAlignment="viewEnd" >

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/bg_action_green"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingBottom="5dp" >

        <TextView
            android:id="@+id/tv_title_NewCustomer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="مشتری جدید"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#ffffff"
            android:textSize="25sp" />
    </LinearLayout>

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearLayout1" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="5dp" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/seprator"
                android:gravity="right"
                android:padding="10dp" >

                <EditText
                    android:id="@+id/et_name_new_customer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_weight="1"
                    android:background="@drawable/edittext_back"
                    android:ems="10"
                    android:hint="نام و نام خانوادگی / نوع و نام شرکت :"
                    android:padding="10dp"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/seprator"
                android:gravity="right"
                android:padding="10dp" >

                <EditText
                    android:id="@+id/et_address_new_customer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_weight="1"
                    android:background="@drawable/edittext_back"
                    android:ems="10"
                    android:hint="آدرس :"
                    android:padding="10dp"
                    android:textSize="14sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/seprator"
                android:gravity="right"
                android:padding="10dp" >

                <Spinner
                    android:id="@+id/sp_customer_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_weight="1"
                    android:background="@drawable/edittext_back"
                    android:padding="10dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/seprator"
                android:gravity="right"
                android:padding="10dp" >

                <EditText
                    android:id="@+id/et_tell_new_customer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_weight="1"
                    android:background="@drawable/edittext_back"
                    android:ems="10"
                    android:hint="تلفن :"
                    android:padding="10dp"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/seprator"
                android:gravity="right"
                android:padding="10dp" >

                <Spinner
                    android:id="@+id/sp_customer_role"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_weight="1"
                    android:background="@drawable/edittext_back"
                    android:padding="10dp"
                    android:prompt="@string/customer_role_prompt" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_relative_person"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/seprator"
                android:gravity="right"
                android:orientation="vertical"
                android:padding="10dp" >

                <Button
                    android:id="@+id/btn_relative_person"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_weight="1"
                    android:background="@drawable/edittext_back"
                    android:paddingRight="15dp"
                    android:text="اشخاص مرتبط :"
                    android:textAlignment="viewEnd" />

                <EditText
                    android:id="@+id/et_relation_person_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/edittext_back"
                    android:ems="10"
                    android:hint="نام و نام خانوادگی / نوع و نام شرکت :"
                    android:padding="10dp"
                    android:textSize="14sp" >

                    <requestFocus />
                </EditText>

                <Spinner
                    android:id="@+id/sp_relation_role_type"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/edittext_back"
                    android:padding="10dp"
                    android:prompt="@string/customer_role_prompt" />

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/ActivityFooter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="5dp"
        android:layout_weight="1" >

        <ImageView
            android:id="@+id/img_discared_new_customer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_weight="1"
            android:src="@drawable/close" />

        <ImageView
            android:id="@+id/img_save_new_customer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_weight="1"
            android:src="@drawable/save" />

    </LinearLayout>

</RelativeLayout>